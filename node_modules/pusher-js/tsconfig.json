{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true, // ✅ ignore errors inside node_modules
    "forceConsistentCasingInFileNames": true
  },
  "include": ["resources/js"],
  "exclude": ["node_modules"] // ✅ don't compile node_modules
}
